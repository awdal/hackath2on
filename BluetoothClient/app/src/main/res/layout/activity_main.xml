<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/send_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_text"
        android:onClick="selfDestruct"
        android:text="SEND NOTIFICATION" />

    <SeekBar
        android:id="@+id/seekBarAixeta1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:max="999"
        android:indeterminate="false"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aixeta 1"
        android:id="@+id/textView"
        android:layout_above="@+id/seekBarAixeta2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <SeekBar
        android:id="@+id/seekBarAixeta2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:max="999"
        android:indeterminate="false"
        android:layout_below="@+id/seekBarAixeta1"
        android:layout_alignRight="@+id/seekBarAixeta1"
        android:layout_alignEnd="@+id/seekBarAixeta1"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aixeta 2"
        android:id="@+id/textView2"

        android:layout_above="@+id/seekBarDutxa"
        android:layout_toLeftOf="@+id/seekBarAixeta2"
        android:layout_toStartOf="@+id/seekBarAixeta2" />

    <SeekBar
        android:id="@+id/seekBarDutxa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:max="999"
        android:indeterminate="false"
        android:layout_below="@+id/seekBarAixeta2"
        android:layout_alignRight="@+id/seekBarAixeta2"
        android:layout_alignLeft="@+id/seekBarAixeta2"
        android:layout_alignStart="@+id/seekBarAixeta2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dutxa"
        android:id="@+id/textView3"
        android:layout_above="@+id/seekBarGeneral"
        android:layout_toLeftOf="@+id/seekBarDutxa"
        android:layout_toStartOf="@+id/seekBarDutxa" />

    <SeekBar
        android:id="@+id/seekBarGeneral"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:max="999"

        android:indeterminate="false"
        android:layout_below="@+id/seekBarDutxa"
        android:layout_alignRight="@+id/seekBarDutxa"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="General"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/seekBarGeneral"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>
